{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Date de Naissance</th>
            <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td>
                {% if user.photo %}
                    <img src="{{ asset('uploads/' ~ user.photo) }}" alt="User Photo" width="100">
                {% else %}
                    No Photo
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Rôle</th>
            <td>{{ user.role }}</td>
        </tr>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-secondary">Back to list</a>
{% endblock %}
